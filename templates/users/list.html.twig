{% extends 'base.html.twig' %}
{% block title %}
    Users
{% endblock %}
{% block body %}
    <section>
        <div class="d-flex mb-3 justify-content-between align-items-center">
            <h1 class="h5 m-0">Users</h1>
            <a href="{{ path('app_users_new') }}" class="btn btn-primary">Create new</a>
        </div>

        {% for user in users %}
            <div class="d-flex justify-content-between align-items-center mb-2">
                <a href="{{ path('app_users_addresses_list', { id: user.id, page: 1 }) }}">{{ user.firstName }}
                    {{ user.lastName }}</a>

                <div class="dropdown">
                    <button id="actions-{{ user.id }}" class="btn btn-link btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Options
                    </button>
                    <div class="dropdown-menu" aria-labelledby="actions-{{ user.id }}">
                        <a class="dropdown-item" href="{{ path('app_users_addresses_list', { id: user.id, page: 1 }) }}">show</a>
                        <a class="dropdown-item" href="{{ path('app_users_edit', { id: user.id }) }}">edit</a>
                    </div>
                </div>
            </div>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}

        {% include 'components/_pagination.html.twig' with {
            current_page: current_page,
            total_pages: total_pages
        } %}
    </section>
{% endblock %}
